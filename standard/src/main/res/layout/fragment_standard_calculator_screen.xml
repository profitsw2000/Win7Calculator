            android:layout_marginStart="@dimen/calculator_space_between_buttons_half_size"
            android:layout_marginTop="@dimen/calculator_space_between_buttons_size"
            android:layout_marginEnd="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_dark_button"
            android:scaleType="fitXY"
            android:src="@drawable/backspace_arrow_img"
            app:layout_constraintBottom_toTopOf="@+id/seven_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/ce_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mc_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ce_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_dark_button"
            android:text="@string/ce_button_text"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_operation_buttons_padding"
            app:layout_constraintBottom_toBottomOf="@+id/backspace_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/c_button"
            app:layout_constraintStart_toEndOf="@+id/backspace_button"
            app:layout_constraintTop_toTopOf="@+id/backspace_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/c_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_dark_button"
            android:text="@string/c_button_text"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_operation_buttons_padding"
            app:layout_constraintBottom_toBottomOf="@+id/ce_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/plus_minus_button"
            app:layout_constraintStart_toEndOf="@+id/ce_button"
            app:layout_constraintTop_toTopOf="@+id/ce_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/plus_minus_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_dark_button"
            android:text="@string/plus_minus_button_text"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_operation_buttons_padding"
            app:layout_constraintBottom_toBottomOf="@+id/c_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/sqrt_button"
            app:layout_constraintStart_toEndOf="@+id/c_button"
            app:layout_constraintTop_toTopOf="@+id/c_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sqrt_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_dark_button"
            android:text="@string/sqrt__button_text"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_operation_buttons_padding"
            app:layout_constraintBottom_toBottomOf="@+id/plus_minus_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/plus_minus_button"
            app:layout_constraintTop_toTopOf="@+id/plus_minus_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seven_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/calculator_space_between_buttons_half_size"
            android:layout_marginTop="@dimen/calculator_space_between_buttons_size"
            android:layout_marginEnd="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_light_button"
            android:text="@string/seven_button_text"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_digit_buttons_padding"
            app:layout_constraintBottom_toTopOf="@+id/four_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/eight_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backspace_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/eight_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_light_button"
            android:text="@string/eight_button_text"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_digit_buttons_padding"
            app:layout_constraintBottom_toBottomOf="@+id/seven_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/nine_button"
            app:layout_constraintStart_toEndOf="@+id/seven_button"
            app:layout_constraintTop_toTopOf="@+id/seven_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nine_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_light_button"
            android:text="@string/nine_button_text"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_digit_buttons_padding"
            app:layout_constraintBottom_toBottomOf="@+id/eight_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/divide_button"
            app:layout_constraintStart_toEndOf="@+id/eight_button"
            app:layout_constraintTop_toTopOf="@+id/eight_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/divide_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_dark_button"
            android:text="@string/divide_button_text"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_operation_buttons_padding"
            app:layout_constraintBottom_toBottomOf="@+id/nine_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/percentage_button"
            app:layout_constraintStart_toEndOf="@+id/nine_button"
            app:layout_constraintTop_toTopOf="@+id/nine_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/percentage_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_dark_button"
            android:text="@string/percent_button_text"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_operation_buttons_padding"
            app:layout_constraintBottom_toBottomOf="@+id/divide_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divide_button"
            app:layout_constraintTop_toTopOf="@+id/divide_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/four_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/calculator_space_between_buttons_half_size"
            android:layout_marginTop="@dimen/calculator_space_between_buttons_size"
            android:layout_marginEnd="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_light_button"
            android:text="@string/four_button_text"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_digit_buttons_padding"
            app:layout_constraintBottom_toTopOf="@+id/one_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/five_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seven_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/five_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_light_button"
            android:text="@string/five_button_text"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_digit_buttons_padding"
            app:layout_constraintBottom_toBottomOf="@+id/four_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/six_button"
            app:layout_constraintStart_toEndOf="@+id/four_button"
            app:layout_constraintTop_toTopOf="@+id/four_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/six_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_light_button"
            android:text="@string/six_button_text"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_digit_buttons_padding"
            app:layout_constraintBottom_toBottomOf="@+id/five_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/multiply_button"
            app:layout_constraintStart_toEndOf="@+id/five_button"
