<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.StandardCalculatorScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/calculator_menu_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/menu_view_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/menu_item_text_vertical_margin"
            android:layout_marginStart="@dimen/main_calculator_horizontal_margin"
            android:text="@string/calculator_menu_view_item_text"
            android:textSize="@dimen/calculator_menu_item_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/menu_edit_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/calculator_menu_space_between_items_text"
            android:text="@string/calculator_menu_edit_item_text"
            android:textSize="@dimen/calculator_menu_item_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/menu_view_item_text_view"
            app:layout_constraintStart_toEndOf="@+id/menu_view_item_text_view"
            app:layout_constraintTop_toTopOf="@+id/menu_view_item_text_view" />

        <TextView
            android:id="@+id/menu_help_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/calculator_menu_space_between_items_text"
            android:text="@string/calculator_menu_help_item_text"
            android:textStyle="bold"
            android:textSize="@dimen/calculator_menu_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/menu_edit_item_text_view"
            app:layout_constraintStart_toEndOf="@+id/menu_edit_item_text_view"
            app:layout_constraintTop_toTopOf="@+id/menu_edit_item_text_view" />

        <View
            android:id="@+id/menu_bottom_line_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/calculator_menu_stroke_size"
            android:layout_marginVertical="@dimen/calculator_menu_items_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_view_item_text_view"
            android:background="@color/calculator_menu_stroke"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/display_and_buttons_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/main_calculator_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_constraint_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/display_screen_constraint_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/calculator_space_between_buttons_double_size"
            android:background="@drawable/main_calculator_display"
            app:layout_constraintDimensionRatio="w,1:4"
            app:layout_constraintEnd_toEndOf="@+id/mminus_button"
            app:layout_constraintStart_toStartOf="@+id/mc_button"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/memory_sign_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/calculator_display_margin"
                android:layout_marginStart="@dimen/calculator_display_margin"
                android:text="@string/calculator_display_memory_sign"
                android:textSize="@dimen/calculator_display_memory_sign_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/percent_7_guideline"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/operation_history_text_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/calculator_display_margin"
                android:layout_marginEnd="@dimen/calculator_display_margin"
                android:gravity="end|bottom"
                android:includeFontPadding="false"
                android:maxLines="1"
                tools:text="1234567890123456  +  1234  +"
                android:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/input_and_result_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="5" />

            <TextView
                android:id="@+id/input_and_result_text_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/calculator_display_margin"
                android:layout_marginBottom="@dimen/calculator_display_margin"
                android:gravity="end|bottom"
                android:includeFontPadding="false"
                android:maxLength="16"
                android:maxLines="1"
                tools:text="123456789012"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="@dimen/input_and_result_text_auto_size_step_granularity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/percent_15_guideline"
                app:layout_constraintTop_toBottomOf="@+id/operation_history_text_view"
                app:layout_constraintVertical_weight="8" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/percent_7_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/percent_15_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.15" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mc_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/calculator_space_between_buttons_half_size"
            android:layout_marginTop="@dimen/calculator_space_between_buttons_size"
            android:layout_marginEnd="@dimen/calculator_space_between_buttons_half_size"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:background="@drawable/main_calculator_shadowed_button"
            android:paddingVertical="@dimen/main_calculator_operation_buttons_padding"
            android:text="@string/mc_button_text"
            app:layout_constraintBottom_toTopOf="@id/backspace_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/mr_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/display_screen_constraint_layout" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mr_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_shadowed_button"
            android:text="@string/mr_button_text"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_operation_buttons_padding"
            app:layout_constraintBottom_toBottomOf="@+id/mc_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/ms_button"
            app:layout_constraintStart_toEndOf="@+id/mc_button"
            app:layout_constraintTop_toTopOf="@+id/mc_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ms_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_shadowed_button"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_operation_buttons_padding"           
            android:text="@string/ms_button_text"
            app:layout_constraintBottom_toBottomOf="@+id/mr_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/mplus_button"
            app:layout_constraintStart_toEndOf="@+id/mr_button"
            app:layout_constraintTop_toTopOf="@+id/mr_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mplus_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_shadowed_button"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_operation_buttons_padding"
            android:text="@string/m_plus_button_text"
            app:layout_constraintBottom_toBottomOf="@+id/ms_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toStartOf="@+id/mminus_button"
            app:layout_constraintStart_toEndOf="@+id/ms_button"
            app:layout_constraintTop_toTopOf="@+id/ms_button" />

        <androidx.appcompat.widget.AppCompatButton
