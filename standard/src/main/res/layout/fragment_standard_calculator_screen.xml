            android:layout_margin="@dimen/calculator_space_between_buttons_half_size"
            android:background="@drawable/main_calculator_shadowed_button"
            android:autoSizeMaxTextSize="@dimen/main_calculator_button_maximum_text_size"
            android:autoSizeMinTextSize="@dimen/main_calculator_button_minimum_text_size"
            android:autoSizeStepGranularity="@dimen/main_calculator_buttons_text_auto_size_step_granularity"
            android:autoSizeTextType="uniform"
            android:paddingVertical="@dimen/main_calculator_operation_buttons_padding"
            android:text="@string/m_minus_button_text"
            app:layout_constraintBottom_toBottomOf="@+id/mplus_button"
            app:layout_constraintDimensionRatio="w,10:8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mplus_button"
            app:layout_constraintTop_toTopOf="@+id/mplus_button" />

        <ImageButton
            android:id="@+id/backspace_button"
